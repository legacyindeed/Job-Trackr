{
    "manifest_version": 3,
    "name": "Trackr - Job Application Tracker",
    "version": "1.0",
    "description": "Automatically tracks job application links and prompts to save them.",
    "permissions": [
        "tabs",
        "storage",
        "scripting",
        "activeTab",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://job-trackr-ten.vercel.app/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        },
        {
            "matches": [
                "https://job-trackr-ten.vercel.app/*"
            ],
            "js": [
                "auth-sync.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Trackr",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "externally_connectable": {
        "matches": [
            "https://job-trackr-ten.vercel.app/*"
        ]
    }
}